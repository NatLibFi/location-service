<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>webapp.root.admin</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>restapi-v1</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.pkrete.locationservice.admin.servlets.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>restapi-v1</servlet-name>
        <url-pattern>/rest/v1/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ImageCreator</servlet-name>
        <servlet-class>com.pkrete.locationservice.admin.servlets.ImageCreator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageCreator</servlet-name>
        <url-pattern>/ImageCreator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/400.htm</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.htm</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.htm</location>
    </error-page>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>LocationServiceAdmin</web-resource-name>
            <url-pattern>*.htm</url-pattern>
            <url-pattern>/scripts/*</url-pattern>
            <url-pattern>/images/*</url-pattern>
            <url-pattern>/ImageCreator</url-pattern>
            <url-pattern>/Search</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
            <role-name>LOCAL_ADMIN</role-name>
            <role-name>USER</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>LocationServiceAdmin-local-administrator</web-resource-name>
            <url-pattern>/ladmuser.htm</url-pattern>
            <url-pattern>/ladmadduser.htm</url-pattern>
            <url-pattern>/ladmedituser.htm</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>LOCAL_ADMIN</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>LocationServiceAdmin-administrator</web-resource-name>
            <url-pattern>/userowner.htm</url-pattern>
            <url-pattern>/adduser.htm</url-pattern>
            <url-pattern>/edituser.htm</url-pattern>
            <url-pattern>/addowner.htm</url-pattern>
            <url-pattern>/editowner.htm</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>LocationServiceAdmin</realm-name>
        <form-login-config>
            <form-login-page>/login.htm</form-login-page>
            <form-error-page>/login.htm?auth=false</form-error-page>
        </form-login-config>
    </login-config>
    <resource-ref>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <security-role>
        <description>Role for regular users.</description>
        <role-name>USER</role-name>
    </security-role>
    <security-role>
        <description>Role for the local administrators.</description>
        <role-name>LOCAL_ADMIN</role-name>
    </security-role>
    <security-role>
        <description>Role for the administrator.</description>
        <role-name>ADMIN</role-name>
    </security-role>
    <!-- This is useful because current browsers typically do not -->
    <!-- set a character encoding even if specified in the HTML page or form -->
    <!-- IF there are more than 1 filter, this one MUST BE THE 1ST IN THE CHAIN -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
